<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link rel="canonical" href="https://getbootstrap.com/docs/4.0/examples/sticky-footer/">
    <link rel="stylesheet" href="/css/style.css">
    <title>Scheduler | Home</title>
  </head>
  <body>
    <div class="sched-homepage">
        <div class="row g-3 my-5 mx-5 row-cols-sm-1 row-cols-md-2 row-cols-lg-3">
          {{#each this}}
            {{#if schedcard}}
                <div class="col">
                    <div class="card" id="{{schedcard}}">
                        <button type="button" class="btn p-0">
                            <img class="sched-img card-img-top" src="{{postImg}}">
                        </button>
                        <div class="card-body p-2 align-content-center">
                            <div class="d-flex justify-content-between">
                                <div class="p-0">
                                    <button type="button" class="btn btn-outline-danger" data-bs-toggle="button" autocomplete="off">
                                        <img src="img/like_32x32.png" class="like-img" alt="like">
                                    </button>
                                </div>
                                <div class="p-0">
                                    <button type="button" class="btn btn-light">
                                        <span class="align-middle">Comment</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {{/if}}
          {{/each}}
        </div>
    </div>
    
    <!-- Script for navbar -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>

  </body>
</html>