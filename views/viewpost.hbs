<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="../css/style.css">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link rel="canonical" href="https://getbootstrap.com/docs/4.0/examples/sticky-footer/">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="/js/viewpost.js" type="text/javascript"></script>
    <title>Scheduler | View Post</title>
  </head>
  <body>
    {{> header flag=flag}}
    <div hidden id="currUser">{{post.loggedUser}}</div>
        <div class="post-template row justify-content-md-center">
            <div class="simg col-md-4 d-flex justify-content-center">
                <img src="{{post.postImg}}" class="sched-img card-img-top" alt="{{post._id}}" id="{{post._id}}">
            </div>
            <div class="col-md-8">
                <div class="card pimg" style="max-height: 300px;">
                    <div class="card-body">
                        <h3 class="vp-title">{{post.schedTitle}}</h3>
                        <h6 class="sched-author">posted by <span><b><a href="/viewaccount/{{post.schedAuthor}}" class="link-unstyled sauthor">{{post.schedAuthor}}</a></b></span></h6>
                        <p class="card-text">{{post.schedDesc}}</p>
                    </div>
                </div>
                <div class="card" style="max-height: 400px;">
                    <ul class="list-group list-group-flush" id="comment-list" style="overflow:auto">
                        {{#each post.comments}}
                            {{#if cAuthor}}
                                <li class="list-group-item" id="C-{{_id}}">
                                    <div class="comment-content">
                                        <div class="comment-details"><a href="/viewaccount/{{cAuthor}}" class="link-unstyled sauthor">{{cAuthor}} </a><span>{{cDesc}}</span></div>
                                        {{#inSession ../post.loggedUser cAuthor }}
                                        <div class="del-div-btn"><button id="{{../_id}}" type="submit" class="delete-comment"><i class="far fa-trash-alt"></i></button></div>
                                        {{/inSession}}                           
                                    </div>
                                </li>
                            {{/if}}
                        {{/each}}
                    </ul>
                </div>
                <div class="card-body p-2 align-content-center">
                    <div class="row">
                        {{#if post.loggedUser}}
                        <div class="col-md-5">
                            <div class="updown-div" id="{{post.loggedUser}}">
                                <div class="upvote-div">
                                    <button type="button" class="upvote-btn" id="upvote">
                                        <i class="fas fa-arrow-up"></i>
                                    </button>
                                    <p id="upqty">{{post.upqty}}</p>
                                </div>
                                <div class="upvote-div">
                                    <button type="button" class="downvote-btn" id="downvote">
                                        <i class="fas fa-arrow-down"></i>
                                    </button>
                                    <p id="downqty">{{post.downqty}}</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-7 d-flex justify-content-center">
                            <div class="form commentform">
                                <input type="text" name="comment" id="comment-form" class="comment-form" placeholder="Leave a comment here">
                                <input type="button" name="submit-cmt" id="comment-btn" class="comment-btn" value="Comment">
                            </div>
                        </div>
                        {{else}}
                        <div class="plslog-div">
                            <a class="plslogin" href="/log_in">Please log in to interact with other users</a>
                        </div>
                        
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    {{> footer}}
    
    
    <!-- Script for navbar -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
  </body>
</html>